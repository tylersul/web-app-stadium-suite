<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Stadium</h1>
    <div class="col-6 offset-3">
        <form action="/stadiums" method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="stadium[name]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="stadium[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image</label>
                <input class="form-control" type="text" id="image" name="stadium[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="stadium[description]"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="avgPrice">Average Ticket Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0.00" id="price" aria-label="avgPrice" aria-describedby="price-label" name="stadium[avgPrice]">
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Stadium</button>
            </div>
        </form>
    </div>
</div>
