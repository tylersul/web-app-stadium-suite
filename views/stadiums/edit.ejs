<% layout('layouts/boilerplate') %>
<form action="/stadiums/<%= stadium._id %>?_method=PUT" method="POST">
    <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="stadium[name]" value="<%= stadium.name %>">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="stadium[location]" value="<%= stadium.location %>">
    </div>
    <div>
        <label for="Image">Image</label>
        <input type="text" id="image" name="stadium[image]" value="<%= stadium.image %>">
    </div>
    <button>Update Stadium</button>
</form>
<a href="/stadiums/<%= stadium._id %>">Back to Stadium</a>